{
  "name": "snifftsx",
  "version": "1.0.0",
  "description": "A tool for detecting code smells in React with TypeScript projects",
  "main": "index.js",
  "scripts": {
    "build": "npx swc lib -d dist",
    "start": "node dist/lib/index.js docs/code-examples",
    "start:dev": "node -r @swc-node/register lib/index.ts docs/code-examples",
    "test": "vitest",
    "coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maykongsn/snifftsx.git"
  },
  "keywords": [
    "react",
    "typescript",
    "smells"
  ],
  "author": "Maykon Nunes",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/maykongsn/snifftsx/issues"
  },
  "homepage": "https://github.com/maykongsn/snifftsx#readme",
  "dependencies": {
    "@swc/cli": "0.4.0",
    "@swc/core": "1.7.1",
    "reactsniffer": "1.0.19",
    "swc": "1.0.11"
  },
  "devDependencies": {
    "@swc-node/register": "1.10.9",
    "typescript": "5.5.4",
    "vitest": "2.0.5"
  }
}
